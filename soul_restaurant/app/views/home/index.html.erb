<% @items.each do |item| %>
<div class="col-sm-6" style="margin-bottom: 20px">
	<div class="col-sm-4">
		<img src="<%= item.remote_image_url %>" class="img img-responsive">
	</div>
	<div class="col-sm-8">
		<div class="card">
		  <div class="card-header">
		    Name: <%= item.name %>
		  </div>
		  <div class="card-block">
		    <p class="card-text">Description: <%= item.description %></p>
		    <p>Price: <%= item.price %></p>
		  </div>
		</div>
	</div>
</div>

<% end %>


